# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Flask Configuration
SECRET_KEY=your_super_secret_key_here_generate_a_long_random_string
FLASK_ENV=development

# Database Configuration
DB_URL=mysql+pymysql://username:password@host:port/database_name

# Stripe Configuration (Use test keys for development)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here

# Domain Configuration
DOMAIN=http://127.0.0.1:9000

# Email Configuration
SENDLAYER_API_KEY=your_sendlayer_api_key_here
FROM_EMAIL=hello@lovemenowmiami.com
FROM_NAME=LoveMeNow
EMAIL_TAGS=development

# Optional: Redis for rate limiting (use memory:// for development)
REDIS_URL=redis://localhost:6379/0

# Uber Direct Integration
UBER_CLIENT_ID=your_uber_client_id_here
UBER_CLIENT_SECRET=your_uber_client_secret_here
UBER_CUSTOMER_ID=your_uber_customer_id_here
UBER_SANDBOX=true

